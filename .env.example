# ===================================
# EJEMPLO DE VARIABLES DE ENTORNO
# ===================================
# Copia este archivo como .env y configura tus valores reales
# NUNCA subas el archivo .env a Git

# ===================================
# SQL SERVER CONFIGURATION
# ===================================
SQLSERVER_HOST=tu-servidor-sql.com
SQLSERVER_PORT=1433
SQLSERVER_DATABASE=BDERP_Agro_Hass
SQLSERVER_USER=tu_usuario
SQLSERVER_PASSWORD=tu_password_seguro
SQLSERVER_DRIVER=ODBC Driver 17 for SQL Server

# ===================================
# SUPABASE CONFIGURATION
# ===================================
SUPABASE_URL=https://tu-proyecto.supabase.co
SUPABASE_KEY=tu_supabase_anon_key

# ===================================
# GOOGLE GEMINI AI
# ===================================
GEMINI_API_KEY=tu_gemini_api_key
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=8192
GEMINI_TEMPERATURE=0.3

# ===================================
# APPLICATION SETTINGS
# ===================================
APP_NAME=AuditDB Analyzer
APP_VERSION=1.0.0
APP_ENV=production
APP_DEBUG=False
APP_HOST=0.0.0.0
APP_PORT=8000

# ===================================
# CORS CONFIGURATION
# ===================================
# Agrega las URLs de tu frontend (separadas por comas)
CORS_ORIGINS=https://tu-dominio.com,https://app.tu-dominio.com
CORS_ALLOW_CREDENTIALS=True

# ===================================
# REPORTS & OUTPUTS
# ===================================
REPORTS_DIR=/app/outputs
MAX_FILE_SIZE_MB=50
PDF_LOGO_PATH=/app/assets/logo.png
